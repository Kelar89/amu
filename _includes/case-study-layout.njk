---
layout: base.njk
---
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <p class="text-neon fw-bold">{{ project.category }}</p>
                <h1 class="display-4 fw-bold">{{ project.title }}</h1>
            </div>
            <img src="{{ project.image | url }}" alt="{{ project.title }}" class="img-fluid rounded shadow-lg mb-5">
            
            <div class="row g-5">
                <div class="col-lg-8">
                    <h3 class="fw-bold">Tantangan Klien</h3>
                    <p class="text-white-50">{{ project.challenge }}</p>
                    <hr class="my-4">
                    <h3 class="fw-bold">Solusi yang Saya Tawarkan</h3>
                    <p class="text-white-50">{{ project.solution }}</p>
                    <hr class="my-4">
                    <h3 class="fw-bold">Hasil Akhir</h3>
                    <p class="text-white-50">{{ project.result }}</p>
                </div>
                <div class="col-lg-4">
                    <div class="sticky-top" style="top: 2rem;">
                        <h5 class="fw-bold">Detail Proyek</h5>
                        <ul class="list-unstyled">
                            <li><strong>Klien:</strong> {{ project.client_name }}</li>
                            <li><strong>Tahun:</strong> {{ project.year }}</li>
                        </ul>
                        <a href="/contact/" class="btn btn-neon w-100">Mulai Proyek Serupa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>